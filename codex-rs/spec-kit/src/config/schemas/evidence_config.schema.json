{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "EvidenceConfig",
  "description": "Evidence collection and retention settings",
  "type": "object",
  "properties": {
    "enabled": {
      "type": "boolean",
      "default": true,
      "description": "Enable evidence collection"
    },
    "base_dir": {
      "type": "string",
      "minLength": 1,
      "default": "docs/evidence",
      "description": "Base directory for evidence storage"
    },
    "max_size_per_spec_mb": {
      "type": "integer",
      "minimum": 1,
      "default": 25,
      "description": "Maximum evidence size per SPEC in megabytes"
    },
    "retention_days": {
      "type": "integer",
      "minimum": 1,
      "default": 90,
      "description": "Retention period for evidence in days"
    }
  },
  "required": ["enabled", "base_dir", "max_size_per_spec_mb", "retention_days"]
}
