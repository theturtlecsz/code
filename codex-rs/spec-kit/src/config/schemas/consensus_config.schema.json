{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ConsensusConfig",
  "description": "Multi-agent consensus configuration",
  "type": "object",
  "properties": {
    "min_agents": {
      "type": "integer",
      "minimum": 2,
      "default": 2,
      "description": "Minimum number of agents required for consensus"
    },
    "max_agents": {
      "type": "integer",
      "minimum": 2,
      "maximum": 10,
      "default": 5,
      "description": "Maximum number of agents to use for consensus"
    },
    "timeout_seconds": {
      "type": "integer",
      "minimum": 1,
      "default": 300,
      "description": "Timeout for consensus operations in seconds"
    }
  },
  "required": ["min_agents", "max_agents", "timeout_seconds"],
  "additionalProperties": false
}
